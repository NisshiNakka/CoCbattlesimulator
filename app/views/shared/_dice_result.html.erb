<%= turbo_frame_tag "dice_result" do %>
  <%= form_with url: roll_dice_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :command, "ダイスコマンド（例: 2d6, 1d100）" %>
      <%= f.text_field :command, placeholder: "2d6", class: "form-control" %>
    </div>
    <%= f.submit "ロール", class: "btn btn-primary" %>
  <% end %>
    
  <% if @result.present? %>
    <div class="result-area">
      <h2>結果</h2>
      <% if @result["error"] %>
        <p class="error"><%= @result["error"] %></p>
      <% else %>
        <p class="result-text"><%= @result["text"] %></p>
      <% end %>
    </div>
  <% end %>
<% end %>